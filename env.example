# AI Agent Boilerplate Environment Configuration
# Copy this file to .env and fill in your actual values

# ========================================
# MongoDB Configuration
# ========================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp
MONGODB_DB_NAME=agent_memory_db
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10

# ========================================
# LLM Provider API Keys
# ========================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Anthropic (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google (Optional)
GOOGLE_API_KEY=your-google-api-key-here

# ========================================
# Embeddings Configuration (Voyage AI)
# ========================================
VOYAGE_API_KEY=pa-your-voyage-ai-api-key-here
VOYAGE_EMBEDDING_MODEL=voyage-2
VOYAGE_EMBEDDING_DIMENSION=1024

# ========================================
# Galileo AI Observability (Optional)
# ========================================
GALILEO_API_KEY=your-galileo-api-key-here
GALILEO_PROJECT_NAME=agent-with-memory
ENVIRONMENT=development

# ========================================
# Redis Cache Configuration (Optional)
# ========================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_CACHE_TTL=3600
REDIS_SEMANTIC_CACHE_ENABLED=false

# ========================================
# API Configuration
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# ========================================
# Memory System Configuration
# ========================================
MEMORY_EPISODIC_TTL_DAYS=90
MEMORY_WORKING_TTL_MINUTES=60
MEMORY_CONSOLIDATION_INTERVAL_HOURS=24
MEMORY_IMPORTANCE_THRESHOLD=0.7

# Chunking configuration (MongoDB patterns)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_DOCUMENT=100

# Vector search configuration
VECTOR_SEARCH_CANDIDATES=100
VECTOR_SEARCH_LIMIT=5
VECTOR_SEARCH_MIN_SCORE=0.7

# ========================================
# Agent Configuration
# ========================================
AGENT_DEFAULT_TEMPERATURE=0.7
AGENT_DEFAULT_MAX_TOKENS=2000
AGENT_DEFAULT_TIMEOUT_SECONDS=30
AGENT_MAX_TOOL_ITERATIONS=5
AGENT_ENABLE_STREAMING=true

# ========================================
# MCP (Model Context Protocol) Configuration
# ========================================
# Enable MCP tools loading
MCP_ENABLED=true

# MCP servers to load (comma-separated list)
# Common servers:
# - npx @modelcontextprotocol/server-filesystem (file system access)
# - npx @modelcontextprotocol/server-github (GitHub integration)
# - npx @modelcontextprotocol/server-brave-search (web search)
# - npx @modelcontextprotocol/server-postgres (database access)
# - npx @modelcontextprotocol/server-slack (Slack integration)
MCP_SERVERS="npx @modelcontextprotocol/server-filesystem,npx @modelcontextprotocol/server-github"

# Optional: GitHub token for GitHub MCP server
MCP_GITHUB_TOKEN=

# Optional: Brave API key for search
MCP_BRAVE_API_KEY=

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ========================================
# Development Settings
# ========================================
DEBUG=false
TESTING=false
